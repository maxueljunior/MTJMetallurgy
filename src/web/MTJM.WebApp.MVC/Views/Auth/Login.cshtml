@model MTJM.WebApp.MVC.Models.LoginViewModel;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MTJM.WebApp.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MTJM.WebApp.MVC.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" asp-append-version="true">
</head>
<body style="background-color: #101B31">

    <div class="container min-vh-100 d-flex align-items-center justify-content-center">

        <div class="card w-75 card-background border">

            <div class="row">

                <div class="col-12 col-md-6">
                    <img src="~/img/logo.jpg" class="img-fluid h-100" alt="logo">
                </div>

                <div class="col-12 col-md-6 d-flex justify-content-center align-items-center text-white">

                    <form class="w-75" method="post">

                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label" asp-for="Username">Username</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Username">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label" asp-for="Password">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" asp-for="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>

                        <button type="submit" class="btn btn-primary mb-3" asp-action="Login" asp-controller="Auth">Login</button>

                    </form>

                </div>

            </div>

        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/02c6aaef30.js" crossorigin="anonymous" asp-append-version="true"></script>
</body>
</html>
