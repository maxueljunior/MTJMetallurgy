@{
    var userName = _claimsHelper.GetUsername();
    var userRoles = _claimsHelper.GetRoles();
    var token = _claimsHelper.GetToken();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MTJM.WebApp.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MTJM.WebApp.MVC.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet" asp-append-version="true">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
</head>
<body>
    
    <div class="container-fluid" style="min-width: 320px">
        <div class="row">

            <div class="d-md-none col-12 nav-mobile">
                <nav class="navbar navbar-expand-lg">
                    <a class="navbar-brand" href="#">
                        <img class="img-fluid" src="~/img/logo.jpg" style="max-height: 70px;" />
                    </a>
                    <button class="btn btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa-solid fa-bars"></i>
                    </button>
                    <div class="collapse navbar-collapse mt-2 row align-items-start" id="navbarNavDropdown">
                        <div class="col-6 border-end">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link text-white m-0 fs-6" asp-action="Index" asp-controller="Cliente">
                                        <i class="fa-regular fa-address-card"></i>
                                        <span>Cliente</span>
                                    </a>
                                </li>
                                <hr style="margin: 5px 40% 5px 0px; color: white" />
                                <li class="nav-item">
                                    <a class="nav-link text-white m-0 fs-6" asp-action="" asp-controller="">
                                        <i class="fa-solid fa-people-arrows"></i>
                                        <span>CRV</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white m-0 fs-6" asp-action="" asp-controller="">
                                        <i class="fa-solid fa-user-pen"></i>
                                        <span>Orçamentista</span>
                                    </a>
                                </li>
                                <hr style="margin: 5px 40% 5px 0px; color: white" />
                                <li class="nav-item">
                                    <a class="nav-link text-white m-0 fs-6" asp-action="" asp-controller="">
                                        <i class="fa-solid fa-hand-holding-dollar"></i>
                                        <span>Proposta</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white m-0 fs-6" asp-action="" asp-controller="">
                                        <i class="fa-solid fa-pen-clip"></i>
                                        <span>Produtos</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white m-0 fs-6" asp-action="" asp-controller="">
                                        <i class="fa-regular fa-clock"></i>
                                        <span>Serviços</span>
                                    </a>
                                </li>
                                <hr style="margin: 5px 40% 5px 0px; color: white" />
                            </ul>
                        </div>

                        <div class="col-6">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <div class="text-center mb-2">
                                        <span style="font-size: 16px;" class="text-white fw-bold">@userName</span>
                                    </div>

                                    <div class="d-flex flex-wrap justify-content-center mb-2">

                                        @foreach (var role in userRoles)
                                        {
                                            <span style="font-size: 12px;" class="text-white fw-bold badge bg-danger m-1">@role.ToUpper()</span>
                                        }

                                    </div>
                                </li>
                                <hr style="margin: 5px 40% 5px 0px; color: white" />

                                <li class="nav-item">
                                    <a class="nav-link text-white m-0 fs-6" href="#"><i class="fa-solid fa-user"></i> Profile</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white m-0 fs-6" href="#"><i class="fa-solid fa-gear"></i> Settings</a>
                                </li>

                                <li class="nav-item"> 
                                    <a class="nav-link text-white m-0 fs-6" asp-action="Logout" asp-controller="Auth"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
                                </li>

                                <hr style="margin: 5px 40% 5px 0px; color: white" />
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>

            <ul class="nav flex-column col-2 col-md-2 col-lg-2 text-start nav-sidebar d-none d-md-block">

                <li class="nav-item align-items-center d-flex justify-content-center flex-column p-2">
                    <img class="img-fluid" src="~/img/logo.jpg" style="max-height: 140px;"/>
                </li>

                <li class="nav-item align-items-center d-flex justify-content-center flex-column mb-4 p-2">
                    <div class="text-center mb-2">
                        <span style="font-size: 16px;" class="text-white fw-bold">@userName</span>
                    </div>

                    @if(userRoles.Count() == 1)
                    {
                        <div class="text-center mb-2">
                            <span style="font-size: 12px;" class="text-white fw-bold badge bg-danger m-1">@userRoles.First().ToUpper()</span>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex flex-wrap justify-content-center mb-2">
                        @foreach(var role in userRoles)
                        {
                            <span style="font-size: 12px;" class="text-white fw-bold badge bg-danger m-1">@role.ToUpper()</span> 
                        }
                        </div>
                    }

                    
                    <div class="dropdown-center">
                        <button type="button" class="btn btn-outline-info rounded-circle btn-lg text-white" data-bs-toggle="dropdown" aria-expanded="true">
                            <i class="fa-solid fa-user"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-navside border">
                            <li><a class="dropdown-item mb-2" href="#"><i class="fa-solid fa-user"></i> Profile</a></li>
                            <li><a class="dropdown-item mb-2" href="#"><i class="fa-solid fa-gear"></i> Settings</a></li>
                            <li><a class="dropdown-item mb-2" asp-action="Logout" asp-controller="Auth"><i class="fa-solid fa-right-from-bracket"></i> Logout</a></li>
                        </ul>
                    </div>
                </li>

                <hr style="margin: 5px 1rem; color: white" />

                <li class="nav-item">
                    <a class="nav-link text-white m-0" asp-action="Index" asp-controller="Cliente">
                        <i class="fa-regular fa-address-card d-flex justify-content-center align-content-center d-md-flex d-lg-inline-block"></i>
                        <span class="d-none d-md-inline-block d-md-flex d-lg-inline-block justify-content-center align-content-center mt-md-2 mt-lg-0">Cliente</span>
                    </a>
                </li>

                <hr style="margin: 5px 1rem; color: white" />

                <li class="nav-item">
                    <a class="nav-link text-white m-0" href="#">
                        <i class="fa-solid fa-people-arrows d-flex justify-content-center align-content-center d-md-flex d-lg-inline-block"></i>
                        <span class="d-none d-md-inline-block d-md-flex d-lg-inline-block justify-content-center align-content-center mt-md-2 mt-lg-0">CRV</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white m-0" href="#">
                        <i class="fa-solid fa-user-pen d-flex justify-content-center align-content-center d-md-flex d-lg-inline-block"></i>
                        <span class="d-none d-md-inline-block d-md-flex d-lg-inline-block justify-content-center align-content-center mt-md-2 mt-lg-0">Orçamentista</span>
                    </a>
                </li>

                <hr style="margin: 5px 1rem; color: white" />

                <li class="nav-item">
                    <a class="nav-link text-white m-0" href="#">
                        <i class="fa-solid fa-hand-holding-dollar d-flex justify-content-center align-content-center d-md-flex d-lg-inline-block"></i>
                        <span class="d-none d-md-inline-block d-md-flex d-lg-inline-block justify-content-center align-content-center mt-md-2 mt-lg-0">Propostas</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white m-0" href="#">
                        <i class="fa-solid fa-pen-clip d-flex justify-content-center align-content-center d-md-flex d-lg-inline-block"></i>
                        <span class="d-none d-md-inline-block d-md-flex d-lg-inline-block justify-content-center align-content-center mt-md-2 mt-lg-0">Produtos</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white m-0" href="#">
                        <i class="fa-regular fa-clock d-flex justify-content-center align-content-center d-md-flex d-lg-inline-block"></i>
                        <span class="d-none d-md-inline-block d-md-flex d-lg-inline-block justify-content-center align-content-center mt-md-2 mt-lg-0">Serviços</span>
                    </a>
                </li>

                <hr style="margin: 5px 1rem; color: white" />
            </ul>

            <div class="wrapper col-12 col-md-10 col-lg-10">
                <main role="main" class="flex-grow-1 container-fluid">
                    @RenderBody()
                </main>
            </div>

            <div class="col-12 col-md-12 col-lg-12 m-0 p-0">
                <footer class="footer mt-auto">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col text-center">
                                &copy; 2024 - MTJMetallurgy
                            </div>
                        </div>
                    </div>
                </footer>
            </div>

        </div>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/02c6aaef30.js" crossorigin="anonymous" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
