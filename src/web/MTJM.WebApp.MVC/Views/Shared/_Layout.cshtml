<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MTJM.WebApp.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MTJM.WebApp.MVC.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" asp-append-version="true">
</head>
<body>
    
    <div class="container-fluid">
        <div class="row">

            <ul class="nav flex-column col-2 col-md-2 col-lg-2 ps-2 text-start nav-sidebar">
                <li class="nav-item">
                    <a class="nav-link text-white m-0" href="#">
                        <i class="fa-regular fa-address-card"></i>
                        <span>Cliente</span>
                    </a>
                </li>

                <hr style="margin: 5px 1rem" />

                <li class="nav-item">
                    <a class="nav-link text-white m-0" href="#">
                        <i class="fa-solid fa-people-arrows"></i>
                        <span>CRV</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white m-0" href="#">
                        <i class="fa-solid fa-user-pen"></i>
                        <span>Orçamentista</span>
                    </a>
                </li>

                <hr style="margin: 5px 1rem" />

                <li class="nav-item">
                    <a class="nav-link text-white m-0" href="#">
                        <i class="fa-solid fa-hand-holding-dollar"></i>
                        <span>Propostas</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white m-0" href="#">
                        <i class="fa-solid fa-pen-clip"></i>
                        <span>Produtos</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white m-0" href="#">
                        <i class="fa-regular fa-clock"></i>
                        <span>Serviços</span>
                    </a>
                </li>
            </ul>

            <div class="col-10 col-md-10 col-lg-10">
                <main role="main">
                    @RenderBody()
                </main>

                <div class="row align-items-end text-center" style="border 5px solid red">
                    <footer class="border-top footer text-muted">
                        <div class="align-items-center text-center d-flex justify-content-center">
                            &copy; 2024 - MTJMetallurgy
                        </div>
                    </footer>
                </div>
            </div>
        </div>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/02c6aaef30.js" crossorigin="anonymous" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
